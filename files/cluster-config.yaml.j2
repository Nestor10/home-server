kind: Cluster
apiVersion: kind.x-k8s.io/v1alpha4
nodes:
- role: control-plane
  image: "kindest/node:{{ kind_image_version }}"
- role: worker
  image: "kindest/node:{{ kind_image_version }}"
  extraPortMappings:
  - containerPort: 80
    hostPort: 8080
    listenAddress: "0.0.0.0"
  - containerPort: 433
    hostPort: 4433
    listenAddress: "0.0.0.0"
  extraMounts:
    - hostPath: "{{ kind_mount_dir }}"
      containerPath: /work